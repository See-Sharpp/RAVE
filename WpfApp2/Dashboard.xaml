<mah:MetroWindow x:Class="WpfApp2.Dashboard"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
                 Title="VoiceSync Dashboard"
                 WindowState="Maximized"
                 WindowStyle="None"
                 Background="#1A1A1A"
                 AllowsTransparency="False">
    <Grid Height="570">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7.663"/>
            <RowDefinition Height="52.337"/>
        </Grid.RowDefinitions>

        <!-- Top Bar: Assistant Status and Controls -->
        <Border Grid.Row="0" Background="#262626" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- Assistant Avatar -->
                <Ellipse Width="50" Height="50" Margin="15" Grid.Column="0">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#00C4B4" Offset="0"/>
                            <GradientStop Color="#7B2CBF" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.7" To="1" Duration="0:0:1" AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <!-- Status and Title -->
                <StackPanel VerticalAlignment="Center" Margin="10" Grid.Column="1">
                    <TextBlock Text="VoiceSync" FontFamily="Inter, Segoe UI" FontSize="24" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock x:Name="AssistantStatus" Text="Listening for commands..." FontFamily="Inter, Segoe UI" FontSize="14" Foreground="#B0B0B0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Command History and Input -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <!-- Command History Panel -->
                <Border Grid.Row="0" Background="#26FFFFFF" CornerRadius="10" Margin="0,0,10,0" BorderBrush="#00C4B4" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CommandHistoryList" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2C2C2C" CornerRadius="8" Margin="0,0,0,10" BorderBrush="#00C4B4" BorderThickness="1">
                                        <Border.RenderTransform>
                                            <TranslateTransform X="50" Y="0"/>
                                        </Border.RenderTransform>
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.X" To="0" Duration="0:0:0.3"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <StackPanel Margin="10">
                                            <TextBlock Text="{Binding CommandText}" FontFamily="Inter, Segoe UI" FontSize="16" Foreground="White"/>
                                            <TextBlock Text="{Binding Outcome}" FontFamily="Inter, Segoe UI" FontSize="12" Foreground="#00FF00" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Manual Command Input -->
                <Border Grid.Row="1" Background="#262626" CornerRadius="10" Margin="0,10,10,0" BorderBrush="#00C4B4" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Width="40" Height="40" Margin="10" Background="Transparent" Click="ToggleVoice_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00C4B4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <fa:IconImage Icon="Microphone" Width="20" Foreground="#00C4B4"/>
                        </Button>
                        <TextBox x:Name="CommandInput" Grid.Column="1" Margin="0,10" Foreground="White" Background="Transparent" BorderThickness="0" FontFamily="Inter, Segoe UI" FontSize="14" VerticalContentAlignment="Center" mah:TextBoxHelper.Watermark="Type or speak a command..." GotFocus="CommandInput_GotFocus" LostFocus="CommandInput_LostFocus"/>
                        <Button Grid.Column="2" Width="40" Height="40" Margin="10" Background="#00C4B4" Click="SendCommand_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00E5CC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <fa:IconImage Icon="PaperPlane" Width="20" Foreground="White"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right: Settings Panel -->
            <Border Grid.Column="1" Background="#26FFFFFF" CornerRadius="10" BorderBrush="#7B2CBF" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Wake Word" Foreground="White" BorderBrush="#7B2CBF" Margin="0,0,0,10">
                            <TextBox x:Name="WakeWordInput" Margin="10" Foreground="White" Background="#2C2C2C" BorderBrush="#7B2CBF" FontFamily="Inter, Segoe UI" FontSize="14" mah:TextBoxHelper.Watermark="Enter wake word (e.g., Hey VoiceSync)"/>
                        </GroupBox>
                        <GroupBox Header="Microphone" Foreground="White" BorderBrush="#7B2CBF" Margin="0,0,0,10">
                            <ComboBox x:Name="MicrophoneSelector" Margin="10" Foreground="White" Background="#2C2C2C" BorderBrush="#7B2CBF" FontFamily="Inter, Segoe UI" FontSize="14"/>
                        </GroupBox>
                        <GroupBox Header="Preferences" Foreground="White" BorderBrush="#7B2CBF">
                            <StackPanel Margin="10">
                                <CheckBox Content="Start with Windows" Foreground="White" FontFamily="Inter, Segoe UI" FontSize="14" Margin="0,0,0,10"/>
                                <CheckBox Content="Minimize to Tray" Foreground="White" FontFamily="Inter, Segoe UI" FontSize="14" Margin="0,0,0,10"/>
                                <CheckBox Content="Enable Command Suggestions" Foreground="White" FontFamily="Inter, Segoe UI" FontSize="14"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Bar: Quick Access -->
    </Grid>
</mah:MetroWindow>