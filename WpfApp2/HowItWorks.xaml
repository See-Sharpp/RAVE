<Page x:Class="WpfApp2.HowItWorks" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp" 
      xmlns:local="clr-namespace:WpfApp2" 
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800" 
      Title="HowItWorks">

    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0A0A0A" Offset="0.0"/>
            <GradientStop Color="#1A1A1A" Offset="1.0"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E1E1E" Offset="0.0"/>
                        <GradientStop Color="#2A2A2A" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3A3A3A" Offset="0.0"/>
                        <GradientStop Color="#4A4A4A" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0,0,0,32"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="8" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeroCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush Center="0.5,0.3" RadiusX="1" RadiusY="1">
                        <GradientStop Color="#2D1B69" Offset="0.0"/>
                        <GradientStop Color="#1E1E1E" Offset="0.7"/>
                        <GradientStop Color="#0F0F0F" Offset="1.0"/>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0.0"/>
                        <GradientStop Color="#8B5CF6" Offset="0.5"/>
                        <GradientStop Color="#EC4899" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0,0,0,40"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#6366F1" BlurRadius="40" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FFFFFF" Offset="0.0"/>
                        <GradientStop Color="#E5E7EB" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="SubHeader" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#6366F1" Offset="0.0"/>
                        <GradientStop Color="#8B5CF6" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="FeatureCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2A2A2A" Offset="0.0"/>
                        <GradientStop Color="#1E1E1E" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="4" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CommandExample" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E293B" Offset="0.0"/>
                        <GradientStop Color="#334155" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0.0"/>
                        <GradientStop Color="#06B6D4" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,8,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10B981" Opacity="0.2" BlurRadius="12" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StepCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2A2A2A" Offset="0.0"/>
                        <GradientStop Color="#1A1A1A" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="6" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StepNumber" TargetType="Border">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0.0"/>
                        <GradientStop Color="#8B5CF6" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#6366F1" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CategoryCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#262626" Offset="0.0"/>
                        <GradientStop Color="#1A1A1A" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,20">
        <StackPanel MaxWidth="1200">
            <!-- Hero Header Section -->
            <Border Style="{StaticResource HeroCard}" Padding="50,40">
                <StackPanel HorizontalAlignment="Center">
                    <Border Background="#6366F1" CornerRadius="40" Width="80" Height="80" Margin="0,0,0,30">
                        <Border.Effect>
                            <DropShadowEffect Color="#6366F1" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                        </Border.Effect>
                        <fa:IconImage Icon="Robot" Width="50" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="How RAVE Works" 
                               FontFamily="Segoe UI" 
                               FontSize="42" 
                               FontWeight="Bold" 
                               Margin="0,0,0,20" 
                               TextAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFFFFF" Offset="0.0"/>
                                <GradientStop Color="#E5E7EB" Offset="1.0"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <TextBlock Text="Your intelligent voice commander that transforms speech into actions" 
                               FontFamily="Segoe UI" 
                               FontSize="20" 
                               Foreground="#9CA3AF" 
                               TextWrapping="Wrap" 
                               TextAlignment="Center" 
                               MaxWidth="600"/>
                </StackPanel>
            </Border>

            <!-- Overview Section -->
            <Border Style="{StaticResource ModernCard}" Padding="40">
                <StackPanel>
                    <TextBlock Text="What is RAVE?" Style="{StaticResource SectionHeader}"/>
                    <TextBlock Style="{StaticResource BodyText}" FontSize="16" Margin="0,0,0,32">
                        RAVE is an advanced voice commander application that uses AI to understand your spoken commands and execute them automatically. Whether you want to open applications, control system settings, browse the web, or perform complex tasks, RAVE makes it possible with just your voice.
                    </TextBlock>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource FeatureCard}" Margin="0,0,16,0">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#10B981" CornerRadius="30" Width="60" Height="60" Margin="0,0,0,20">
                                    <fa:IconImage Icon="Microphone" Width="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Voice Recognition" Style="{StaticResource SubHeader}" HorizontalAlignment="Center" FontSize="18"/>
                                <TextBlock Text="Advanced AI-powered speech recognition that understands natural language commands" 
                                          Style="{StaticResource BodyText}" 
                                          TextAlignment="Center" 
                                          FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource FeatureCard}" Margin="8,0">
                            <StackPanel HorizontalAlignment="Center">
                                <fa:IconImage Icon="Cogs" Width="48" Foreground="#F59E0B" Margin="0,0,0,16"/>
                                <TextBlock Text="Smart Automation" Style="{StaticResource SubHeader}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Automatically executes system commands, opens applications, and performs complex tasks"
                                Style="{StaticResource BodyText}" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource FeatureCard}" Margin="16,0,0,0">
                            <StackPanel HorizontalAlignment="Center">
                                <fa:IconImage Icon="Brain" Width="48" Foreground="#8B5CF6" Margin="0,0,0,16"/>
                                <TextBlock Text="AI Intelligence" Style="{StaticResource SubHeader}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Learns from your usage patterns and provides intelligent command suggestions"
                                Style="{StaticResource BodyText}" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- How to Use Section -->
            <Border Style="{StaticResource ModernCard}" Padding="40">
                <StackPanel>
                    <TextBlock Text="How to Use RAVE" Style="{StaticResource SectionHeader}"/>

                    <!-- Step 1 -->
                    <Border Style="{StaticResource StepCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource StepNumber}">
                                <TextBlock Text="1" FontSize="24" FontWeight="Bold" Foreground="White" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Activate with Wake Word" Style="{StaticResource SubHeader}" FontSize="22"/>
                                <TextBlock Style="{StaticResource BodyText}" FontSize="16">
                                    Say your wake word ("Hey RAVE") to activate the voice recognition. The AI will start listening for your commands. You can turn on/off the wake word detection in settings.
                                </TextBlock>
                                <Border Style="{StaticResource CommandExample}">
                                    <TextBlock Text='💬 Example: "Hey RAVE, open Visual Studio Code"' 
                                              FontFamily="Segoe UI" 
                                              FontSize="15" 
                                              Foreground="#10B981" 
                                              FontWeight="Medium"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Step 2 -->
                    <Border Style="{StaticResource StepCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource StepNumber}">
                                <TextBlock Text="2" FontSize="24" FontWeight="Bold" Foreground="White" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Record Your Command" Style="{StaticResource SubHeader}" FontSize="22"/>
                                <TextBlock Style="{StaticResource BodyText}" FontSize="16">
                                    Click the red microphone button to start recording your voice command. Speak clearly and naturally - RAVE understands conversational language and context.
                                </TextBlock>
                                <Border Style="{StaticResource CommandExample}">
                                    <TextBlock Text='🎤 Try: "Increase volume by 20%" or "Open Chrome and search for weather"' 
                                              FontFamily="Segoe UI" 
                                              FontSize="15" 
                                              Foreground="#10B981" 
                                              FontWeight="Medium"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Step 3 -->
                    <Border Style="{StaticResource StepCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource StepNumber}">
                                <TextBlock Text="3" FontSize="24" FontWeight="Bold" Foreground="White" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Type Commands Manually" Style="{StaticResource SubHeader}" FontSize="22"/>
                                <TextBlock Style="{StaticResource BodyText}" FontSize="16">
                                    Prefer typing? Use the text input field to manually enter commands. This is perfect for quiet environments or when you want to be more precise with your instructions.
                                </TextBlock>
                                <Border Style="{StaticResource CommandExample}">
                                    <TextBlock Text='⌨️ Type: "open calculator" or "set brightness to 50%"' 
                                              FontFamily="Segoe UI" 
                                              FontSize="15" 
                                              Foreground="#10B981" 
                                              FontWeight="Medium"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Step 4 -->
                    <Border Style="{StaticResource StepCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource StepNumber}">
                                <TextBlock Text="4" FontSize="24" FontWeight="Bold" Foreground="White" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Send and Execute" Style="{StaticResource SubHeader}" FontSize="22"/>
                                <TextBlock Style="{StaticResource BodyText}" FontSize="16">
                                    Click the send button to execute your command. RAVE will process your request and perform the action automatically. Watch as your commands come to life!
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Command Examples Section -->
            <Border Style="{StaticResource ModernCard}" Padding="40">
                <StackPanel>
                    <TextBlock Text="Command Examples" Style="{StaticResource SectionHeader}"/>
                    <TextBlock Style="{StaticResource BodyText}" FontSize="16" Margin="0,0,0,32">
                        RAVE supports a wide variety of commands. Here are some examples of what you can do:
                    </TextBlock>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="🎮 Application Control" Style="{StaticResource SubHeader}" FontSize="20"/>
                            <Border Style="{StaticResource CategoryCard}">
                                <StackPanel>
                                    <TextBlock Text='"Open Visual Studio Code"' FontFamily="Consolas" Foreground="#5EEAD4" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Launch Steam"' FontFamily="Consolas" Foreground="#5EEAD4" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Start Spotify"' FontFamily="Consolas" Foreground="#5EEAD4" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Launch Calculator"' FontFamily="Consolas" Foreground="#5EEAD4" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Open Word"' FontFamily="Consolas" Foreground="#5EEAD4" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="🔊 System Control" Style="{StaticResource SubHeader}" FontSize="20"/>
                            <Border Style="{StaticResource CategoryCard}">
                                <StackPanel>
                                    <TextBlock Text='"Increase volume by 20%"' FontFamily="Consolas" Foreground="#FACC15" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Set brightness to 75%"' FontFamily="Consolas" Foreground="#FACC15" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Mute microphone"' FontFamily="Consolas" Foreground="#FACC15" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Lock computer"' FontFamily="Consolas" Foreground="#FACC15" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="📁 File Management" Style="{StaticResource SubHeader}" FontSize="20"/>
                            <Border Style="{StaticResource CategoryCard}">
                                <StackPanel>
                                    <TextBlock Text='"Open Documents folder"' FontFamily="Consolas" Foreground="#C4B5FD" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Open Resume.pdf"' FontFamily="Consolas" Foreground="#C4B5FD" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Open project.txt"' FontFamily="Consolas" Foreground="#C4B5FD" FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="🌐 Web Browsing" Style="{StaticResource SubHeader}" FontSize="20"/>
                            <Border Style="{StaticResource CategoryCard}">
                                <StackPanel>
                                    <TextBlock Text='"Open Chrome and go to YouTube"' FontFamily="Consolas" Foreground="#FB7185" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Search for cats on YouTube"' FontFamily="Consolas" Foreground="#FB7185" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Search weather forecast"' FontFamily="Consolas" Foreground="#FB7185" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Open Postman"' FontFamily="Consolas" Foreground="#FB7185" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Go to GitHub"' FontFamily="Consolas" Foreground="#FB7185" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="⚙️ Advanced Commands" Style="{StaticResource SubHeader}" FontSize="20"/>
                            <Border Style="{StaticResource CategoryCard}">
                                <StackPanel>
                                    <TextBlock Text='"Take a screenshot"' FontFamily="Consolas" Foreground="#4DD0E1" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Show system information"' FontFamily="Consolas" Foreground="#4DD0E1" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Restart computer"' FontFamily="Consolas" Foreground="#4DD0E1" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock Text='"Sleep computer"' FontFamily="Consolas" Foreground="#4DD0E1" FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Interface Features Section -->
            <Border Style="{StaticResource ModernCard}" Padding="40">
                <StackPanel>
                    <TextBlock Text="Interface Features" Style="{StaticResource SectionHeader}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <Border Style="{StaticResource FeatureCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <Border Background="#10B981" CornerRadius="15" Width="30" Height="30" Margin="0,0,12,0">
                                            <fa:IconImage Icon="ToggleOn" Width="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Voice Toggle Button" Style="{StaticResource SubHeader}" Margin="0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Style="{StaticResource BodyText}">
                                        The toggle button enables or disables voice recognition. When ON (green), RAVE actively listens for your wake word. When OFF (gray), voice recognition is paused to save resources.
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource FeatureCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <Border Background="#6366F1" CornerRadius="15" Width="30" Height="30" Margin="0,0,12,0">
                                            <fa:IconImage Icon="History" Width="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Command History" Style="{StaticResource SubHeader}" Margin="0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Style="{StaticResource BodyText}">
                                        View all your previous commands in the history panel. This helps you track what you've done and easily repeat common commands. Click on any historical command to execute it again.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <Border Style="{StaticResource FeatureCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <Border Background="#F59E0B" CornerRadius="15" Width="30" Height="30" Margin="0,0,12,0">
                                            <fa:IconImage Icon="Search" Width="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Smart Scan Feature" Style="{StaticResource SubHeader}" Margin="0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Style="{StaticResource BodyText}">
                                        The scan feature analyzes your system to suggest available commands based on installed applications and system capabilities. It helps discover new ways to use RAVE effectively.
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource FeatureCard}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <Border Background="#8B5CF6" CornerRadius="15" Width="30" Height="30" Margin="0,0,12,0">
                                            <fa:IconImage Icon="UserShield" Width="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Speaker Verification" Style="{StaticResource SubHeader}" Margin="0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Style="{StaticResource BodyText}">
                                        Enhance your RAVE security with speaker verification. The app recognizes your unique voice to ensure that only you can issue commands, adding an extra layer of protection.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Pro Tips Section -->
            <Border Style="{StaticResource ModernCard}" Padding="40">
                <StackPanel>
                    <TextBlock Text="Pro Tips for Better Performance" Style="{StaticResource SectionHeader}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <Border Style="{StaticResource CommandExample}" BorderBrush="#10B981">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="#10B981" CornerRadius="12" Width="24" Height="24" Margin="0,0,12,0">
                                            <fa:IconImage Icon="Lightbulb" Width="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Speak Clearly" FontWeight="SemiBold" Foreground="#10B981" FontSize="16"/>
                                    </StackPanel>
                                    <TextBlock Text="Speak at a normal pace and volume. Avoid background noise for better recognition accuracy." 
                                              Style="{StaticResource BodyText}" 
                                              Margin="0" 
                                              FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CommandExample}" BorderBrush="#F59E0B">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="#F59E0B" CornerRadius="12" Width="24" Height="24" Margin="0,0,12,0">
                                            <fa:IconImage Icon="Clock" Width="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Use Natural Language" FontWeight="SemiBold" Foreground="#F59E0B" FontSize="16"/>
                                    </StackPanel>
                                    <TextBlock Text="RAVE understands conversational commands. Say 'open my music player' instead of just 'music'." 
                                              Style="{StaticResource BodyText}" 
                                              Margin="0" 
                                              FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <Border Style="{StaticResource CommandExample}" BorderBrush="#8B5CF6">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="#8B5CF6" CornerRadius="12" Width="24" Height="24" Margin="0,0,12,0">
                                            <fa:IconImage Icon="Star" Width="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Learn from History" FontWeight="SemiBold" Foreground="#8B5CF6" FontSize="16"/>
                                    </StackPanel>
                                    <TextBlock Text="Check your command history to see which phrases work best and refine your voice commands." 
                                              Style="{StaticResource BodyText}" 
                                              Margin="0" 
                                              FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CommandExample}" BorderBrush="#EF4444">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="#EF4444" CornerRadius="12" Width="24" Height="24" Margin="0,0,12,0">
                                            <fa:IconImage Icon="Shield" Width="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Privacy First" FontWeight="SemiBold" Foreground="#EF4444" FontSize="16"/>
                                    </StackPanel>
                                    <TextBlock Text="Your voice data is processed locally. RAVE respects your privacy and doesn't send audio to external servers." 
                                              Style="{StaticResource BodyText}" 
                                              Margin="0" 
                                              FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
