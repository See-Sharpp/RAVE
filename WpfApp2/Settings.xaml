                    <UniformGrid Columns="2" HorizontalAlignment="Center" Width="320">
                        <Button x:Name="PlayButton"
                                Content="▶ Play Recording"
                                Click="PlayRecordedAudio"
                                FontFamily="Segoe UI"
                                FontSize="13"
                                FontWeight="Medium"
                                Padding="20,12"
