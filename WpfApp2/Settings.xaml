<Page x:Class="WpfApp2.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Settings">

    <Page.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SlideToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="SwitchBorder"
                                    Width="{TemplateBinding Width}" 
                                    Height="{TemplateBinding Height}"
                                    CornerRadius="16" 
                                    Background="#3F3F46" 
                                    BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="0" Opacity="0.1"/>
                                </Border.Effect>
                            </Border>
                            <Ellipse x:Name="SwitchKnob"
                                     Width="24" Height="24"
                                     Fill="White" 
                                     Margin="4"
                                     HorizontalAlignment="Left">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="1" Opacity="0.2"/>
                                </Ellipse.Effect>
                                <Ellipse.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="KnobScaleTransform" ScaleX="1.0" ScaleY="1.0" CenterX="12" CenterY="12"/>
                                        <TranslateTransform x:Name="KnobTranslateTransform" X="0"/>
                                    </TransformGroup>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#6366F1" Offset="0"/>
                                            <GradientStop Color="#8B5CF6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="KnobTranslateTransform" 
                                                           Storyboard.TargetProperty="X"
                                                           To="28" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="KnobTranslateTransform" 
                                                           Storyboard.TargetProperty="X"
                                                           To="0" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SwitchKnob" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="KnobScaleTransform" 
                                                           Storyboard.TargetProperty="ScaleX" To="0.92" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="KnobScaleTransform" 
                                                           Storyboard.TargetProperty="ScaleY" To="0.92" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="KnobScaleTransform" 
                                                           Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="KnobScaleTransform" 
                                                           Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#6366F1"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="3"
                                    Height="6"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Background="#6366F1" 
                                                  BorderThickness="0"
                                                  Height="6">
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="3"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="20" Height="20">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Fill="White"
                                                         Stroke="#6366F1"
                                                         StrokeThickness="2">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

    </Page.Resources>

    <Grid Background="#0F0F0F">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
            <StackPanel MaxWidth="800">

                <!-- Header -->
                <StackPanel Margin="0,0,0,32">
                    <TextBlock Text="Settings"
                               FontFamily="Segoe UI"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Configure your VoiceSync preferences"
                               FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#9CA3AF"/>
                </StackPanel>

                <!-- Voice Settings Card -->
                <Border Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Card Header -->
                        <Border Background="#262626"
                                CornerRadius="16,16,0,0"
                                Padding="24,20">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Microphone" Width="24" Foreground="#6366F1" Margin="0,0,12,0"/>
                                <TextBlock Text="Voice Settings"
                                           FontFamily="Segoe UI"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                            </StackPanel>
                        </Border>

                        <!-- Wake Word Detection -->
                        <Border Style="{StaticResource SettingItemStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Wake Word Detection"
                                               FontFamily="Segoe UI"
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="White"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Enable voice activation with 'Hey Jarvis'. Continuously listens for wake word."
                                               FontFamily="Segoe UI"
                                               FontSize="14"
                                               Foreground="#9CA3AF"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <ToggleButton x:Name="WakeWordToggle" 
                                              Grid.Column="1"
                                              Style="{StaticResource SlideToggleButtonStyle}"
                                              Checked="WakeWordToggle_Checked"
                                              Unchecked="WakeWordToggle_Unchecked"/>
                            </Grid>
                        </Border>

                        <!-- Voice Sensitivity -->
                        <Border Style="{StaticResource SettingItemStyle}">
                            <StackPanel>
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Voice Sensitivity"
                                                   FontFamily="Segoe UI"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="White"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="Adjust microphone sensitivity for voice detection"
                                                   FontFamily="Segoe UI"
                                                   FontSize="14"
                                                   Foreground="#9CA3AF"/>
                                    </StackPanel>

                                    <TextBlock x:Name="SensitivityValue" 
                                               Grid.Column="1"
                                               Text="50%"
                                               FontFamily="Segoe UI"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="#6366F1"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <Slider x:Name="SensitivitySlider"
                                        Style="{StaticResource ModernSlider}"
                                        Minimum="0" Maximum="100" Value="50"
                                        ValueChanged="SensitivitySlider_ValueChanged"/>
                            </StackPanel>
                        </Border>

                        <!-- Auto-Listen -->
                        <Border Style="{StaticResource SettingItemStyle}" BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Auto-Listen Mode"
                                               FontFamily="Segoe UI"
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="White"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Automatically start listening after each response"
                                               FontFamily="Segoe UI"
                                               FontSize="14"
                                               Foreground="#9CA3AF"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <ToggleButton x:Name="AutoListenToggle" 
                                              Grid.Column="1"
                                              Style="{StaticResource SlideToggleButtonStyle}"
                                              Checked="AutoListenToggle_Checked"
                                              Unchecked="AutoListenToggle_Unchecked"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                    <StackPanel>
                        
                        <Border Background="#262626"
                                CornerRadius="16,16,0,0"
                                Padding="24,20">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Shield" Width="24" Foreground="#6366F1" Margin="0,0,12,0"/>
                                <TextBlock Text="Privacy &amp; Security"
                           FontFamily="Segoe UI"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                            </StackPanel>
                        </Border>

                        
                        <Border Style="{StaticResource SettingItemStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Save Command History"
                               FontFamily="Segoe UI"
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="White"
                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Store voice commands locally for improved experience"
                               FontFamily="Segoe UI"
                               FontSize="14"
                               Foreground="#9CA3AF"/>
                                </StackPanel>

                                <ToggleButton x:Name="SaveHistoryToggle" 
                              Grid.Column="1"
                              Style="{StaticResource SlideToggleButtonStyle}"
                              IsChecked="True"
                              Checked="SaveHistoryToggle_Checked"
                              Unchecked="SaveHistoryToggle_Unchecked"/>
                            </Grid>
                        </Border>

                        
                        <Border Style="{StaticResource SettingItemStyle}" BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Speaker Verification"
                               FontFamily="Segoe UI"
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="White"
                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Helps us authenticate user's voice and only run any command if it matches the user voice."
                               FontFamily="Segoe UI"
                               FontSize="14"
                               Foreground="#9CA3AF"/>
                                </StackPanel>

                                <ToggleButton x:Name="AnalyticsToggle" 
                              Grid.Column="1"
                              Style="{StaticResource SlideToggleButtonStyle}"
                              Checked="AnalyticsToggle_Checked"
                              Unchecked="AnalyticsToggle_Unchecked"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>


                <!-- Interface Settings Card -->
                <Border Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Card Header -->
                        <Border Background="#262626"
                                CornerRadius="16,16,0,0"
                                Padding="24,20">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Palette" Width="24" Foreground="#6366F1" Margin="0,0,12,0"/>
                                <TextBlock Text="Interface Settings"
                                           FontFamily="Segoe UI"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                            </StackPanel>
                        </Border>

                        <!-- Dark Mode -->
                        <Border Style="{StaticResource SettingItemStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Dark Mode"
                                               FontFamily="Segoe UI"
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="White"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Use dark theme for better visibility in low light"
                                               FontFamily="Segoe UI"
                                               FontSize="14"
                                               Foreground="#9CA3AF"/>
                                </StackPanel>

                                <ToggleButton x:Name="DarkModeToggle" 
                                              Grid.Column="1"
                                              Style="{StaticResource SlideToggleButtonStyle}"
                                              IsChecked="True"
                                              Checked="DarkModeToggle_Checked"
                                              Unchecked="DarkModeToggle_Unchecked"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>