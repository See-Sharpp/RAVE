                    <Button x:Name="AcceptButton"
                            Content="✓ Accept &amp; Save"
                            Click="AcceptRecording"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Padding="40,16"
                            Background="#22C55E"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,0,0,20"
