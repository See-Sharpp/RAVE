<mah:MetroWindow
    x:Class="WpfApp2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
    Title="Login"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    ShowTitleBar="False"
    WindowStyle="None"
    Background="Transparent"
    AllowsTransparency="True"
    Width="1100"
    Height="700">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F0F23" Offset="0" />
                <GradientStop Color="#1A1A2E" Offset="0.5" />
                <GradientStop Color="#16213E" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <Canvas Grid.ColumnSpan="2">
            <Ellipse Canvas.Left="100" Canvas.Top="50" Width="300" Height="300" Opacity="0.03">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#00D4AA" Offset="0" />
                        <GradientStop Color="Transparent" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Canvas.Right="80" Canvas.Bottom="100" Width="250" Height="250" Opacity="0.04">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF6B6B" Offset="0" />
                        <GradientStop Color="Transparent" Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <Grid Grid.Column="0" Margin="60,0,30,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <Border
                        Width="60"
                        Height="60"
                        CornerRadius="15"
                        Margin="0,0,20,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00D4AA" Offset="0" />
                                <GradientStop Color="#01A3A4" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock
                            Text="R"
                            FontFamily="Segoe UI"
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            Text="RAVE"
                            FontFamily="Segoe UI"
                            FontSize="48"
                            FontWeight="Bold"
                            Foreground="White"
                            />
                    </StackPanel>
                </StackPanel>

                <TextBlock
                    Text="Welcome to the future"
                    FontFamily="Segoe UI"
                    FontSize="32"
                    FontWeight="Light"
                    Foreground="White"
                    Margin="0,0,0,16"
                    LineHeight="40"/>

                <TextBlock
                    Text="Take full control of your PC with secure, real-time voice commands. Launch apps, open files, browse the web, and execute system actions, all through natural language."
                    FontFamily="Segoe UI"
                    FontSize="16"
                    Foreground="#B0B3B8"
                    TextWrapping="Wrap"
                    LineHeight="24"
                    MaxWidth="410"
                    Margin="0,0,0,40"/>

                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <fa:IconImage Icon="Shield" Width="16" Height="16" Foreground="#00D4AA" Margin="0,0,12,0"/>
                        <TextBlock Text="Wake Word and Voice Verification" FontFamily="Segoe UI" FontSize="14" Foreground="#E4E6EA"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <fa:IconImage Icon="Bolt" Width="16" Height="16" Foreground="#00D4AA" Margin="0,0,12,0"/>
                        <TextBlock Text="Real-Time Execution" FontFamily="Segoe UI" FontSize="14" Foreground="#E4E6EA"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="MagnifyingGlass" Width="16" Height="16" Foreground="#00D4AA" Margin="0,0,12,0"/>
                        <TextBlock Text="Smart File Tracking" FontFamily="Segoe UI" FontSize="14" Foreground="#E4E6EA"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>


        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,60,0">
            <Border
                Width="420"
                CornerRadius="24"
                Padding="40">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1E1E2E" Offset="0" />
                        <GradientStop Color="#2A2A3E" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect
                        ShadowDepth="0"
                        BlurRadius="40"
                        Opacity="0.3"
                        Color="#000000"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock
                        Text="Sign In"
                        FontFamily="Segoe UI"
                        FontSize="28"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Center"/>

                    <TextBlock
                        Text="Enter your credentials to continue"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        Foreground="#9CA3AF"
                        Margin="0,0,0,32"
                        HorizontalAlignment="Center"/>

                    <TextBlock
                        Text="Email or Username"
                        FontFamily="Segoe UI"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="#E4E6EA"
                        Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,20">
                        <Border
                            CornerRadius="12"
                            Padding="16"
                            BorderThickness="1">
                            <Border.Background>
                                <SolidColorBrush Color="#2D2D44" Opacity="0.6"/>
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#404040" Opacity="0.8"/>
                            </Border.BorderBrush>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <fa:IconImage
                                    Icon="User"
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"
                                    Foreground="#00D4AA"
                                    Grid.Column="0"/>
                                <TextBox
                                    x:Name="username"
                                    Grid.Column="1"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    FontFamily="Segoe UI"
                                    FontSize="15"
                                    Foreground="White"
                                    VerticalContentAlignment="Center"
                                    mah:TextBoxHelper.Watermark="Enter your email or username"
                                    Style="{DynamicResource MahApps.Styles.TextBox}"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <TextBlock
                        Text="Password"
                        FontFamily="Segoe UI"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="#E4E6EA"
                        Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,24">
                        <Border
                            CornerRadius="12"
                            Padding="16"
                            BorderThickness="1">
                            <Border.Background>
                                <SolidColorBrush Color="#2D2D44" Opacity="0.6"/>
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#404040" Opacity="0.8"/>
                            </Border.BorderBrush>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <fa:IconImage
                                    Icon="Lock"
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"
                                    Foreground="#00D4AA"
                                    Grid.Column="0"/>
                                <PasswordBox
                                    x:Name="password"
                                    Grid.Column="1"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    FontFamily="Segoe UI"
                                    FontSize="15"
                                    Foreground="White"
                                    VerticalContentAlignment="Center"
                                    mah:TextBoxHelper.Watermark="Enter your password"
                                    Style="{DynamicResource MahApps.Styles.PasswordBox}"/>
                                <fa:IconImage
                                    Icon="Eye"
                                    Width="16"
                                    Height="16"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="#6B7280"
                                    Grid.Column="2"
                                    Cursor="Hand"
                                    Opacity="0.7"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Margin="0,0,0,28">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <CheckBox
                            Grid.Column="0"
                            Content="Remember me"
                            FontFamily="Segoe UI"
                            FontSize="13"
                            Foreground="#B0B3B8"
                            IsChecked="True"
                            x:Name="rememberMe"
                            VerticalAlignment="Center"/>
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center">
                            <Hyperlink
                                Foreground="#00D4AA"
                                FontFamily="Segoe UI"
                                FontSize="13"
                                TextDecorations="None"
                                Cursor="Hand">
                                Forgot Password?
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <Button
                        Content="Sign In"
                        Height="52"
                        Margin="0,0,0,24"
                        Foreground="White"
                        Click="Login"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
                                <Setter Property="FontFamily" Value="Segoe UI"/>
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="12" Padding="16">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#00D4AA" Offset="0" />
                                                        <GradientStop Color="#01A3A4" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="#00E5BB" Offset="0" />
                                                                <GradientStop Color="#02B4B5" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Grid Margin="0,0,0,24">
                        <Rectangle Height="1" Fill="#404040" Opacity="0.5"/>
                        <TextBlock
                            Text="or"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Foreground="#6B7280"
                          
                            HorizontalAlignment="Center"/>
                    </Grid>

                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        Foreground="#B0B3B8">
                        Don't have an account?
                        <Hyperlink
                            Foreground="#00D4AA"
                            FontWeight="SemiBold"
                            TextDecorations="None"
                            Cursor="Hand"
                            Click="Sign_Up">
                            Sign Up
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</mah:MetroWindow>