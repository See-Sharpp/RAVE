<mah:MetroWindow
    x:Class="WpfApp2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
    Title="Login"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    ShowTitleBar="False"
    WindowStyle="None"
    Background="Transparent"
    AllowsTransparency="True"
    Width="900"
    Height="600">

    <Grid>
        <!-- Background with subtle gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E1E2E" Offset="0" />
                <GradientStop Color="#3B4252" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Branding Panel -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#6B7280" Offset="0" />
                    <GradientStop Color="#60A5FA" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                <TextBlock
                    Text="RAVE"
                    FontFamily="Poppins"
                    FontSize="56"
                    FontWeight="SemiBold"
                    Foreground="#F3F4F6"
                    TextAlignment="Center"
                    Margin="0,0,0,16"/>
                <TextBlock
                    Text="Secure Login Portal"
                    FontFamily="Roboto"
                    FontSize="18"
                    FontWeight="Regular"
                    Foreground="#D1D5DB"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    Width="220"/>
            </StackPanel>
        </Border>

        <!-- Right Login Form (Glassmorphism) -->
        <Grid
            Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="420">
            <Border
                Background="#1AFFFFFF"
                CornerRadius="16"
                Padding="32">
                <Border.Effect>
                    <DropShadowEffect
                        ShadowDepth="0"
                        BlurRadius="20"
                        Opacity="0.3"
                        Color="#000000"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header -->
                    <TextBlock
                        Text="Welcome Back 👋"
                        FontFamily="Poppins"
                        FontSize="30"
                        FontWeight="SemiBold"
                        Foreground="#F3F4F6"
                        Margin="0,0,0,28"
                        HorizontalAlignment="Center"/>

                    <!-- Username Field -->
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <fa:IconImage
                            Icon="User"
                            Width="22"
                            Height="22"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Foreground="#60A5FA"
                            Grid.Column="0">
                            <fa:IconImage.Style>
                                <Style TargetType="fa:IconImage">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#93C5FD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </fa:IconImage.Style>
                        </fa:IconImage>
                        <Border
                            Grid.Column="1"
                            Background="#26FFFFFF"
                            CornerRadius="10"
                            Padding="12"
                            BorderBrush="#4B5563"
                            BorderThickness="1">
                            <TextBox
                                x:Name="username"
                                BorderThickness="0"
                                Background="Transparent"
                                FontFamily="Roboto"
                                FontSize="16"
                                Foreground="#F3F4F6"
                                VerticalContentAlignment="Center"
                                mah:TextBoxHelper.Watermark="Email or Username"
                                Style="{DynamicResource MahApps.Styles.TextBox}"/>
                        </Border>
                    </Grid>

                    <!-- Password Field -->
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <fa:IconImage
                            Icon="Lock"
                            Width="22"
                            Height="22"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Foreground="#60A5FA"
                            Grid.Column="0">
                            <fa:IconImage.Style>
                                <Style TargetType="fa:IconImage">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#93C5FD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </fa:IconImage.Style>
                        </fa:IconImage>
                        <Border
                            Grid.Column="1"
                            Background="#26FFFFFF"
                            CornerRadius="10"
                            Padding="12"
                            BorderBrush="#4B5563"
                            BorderThickness="1">
                            <PasswordBox
                                x:Name="password"
                                BorderThickness="0"
                                Background="Transparent"
                                FontFamily="Roboto"
                                FontSize="16"
                                Foreground="#F3F4F6"
                                VerticalContentAlignment="Center"
                                mah:TextBoxHelper.Watermark="Password"
                                Style="{DynamicResource MahApps.Styles.PasswordBox}"/>
                        </Border>
                    </Grid>

                    <!-- Remember Me + Forgot Password -->
                    <StackPanel
                        Margin="0,12"
                        Orientation="Vertical">
                        <CheckBox
                            Content="Remember Me"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="#D1D5DB"
                            IsChecked="True"
                            Margin="0,0,0,10"/>
                        <TextBlock FontSize="13" FontFamily="Roboto">
                            <Hyperlink
                                Foreground="#60A5FA"
                                NavigateUri="#"
                                RequestNavigate="ForgotPassword_Click"
                                Cursor="Hand">
                                Forgot Password?
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <!-- Login Button -->
                    <Button
                        Content="Sign In"
                        Height="44"
                        Margin="0,20,0,0"
                        Foreground="#F3F4F6"
                        Click="Login"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
                                <Setter Property="Background" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="#F3F4F6"/>
                                <Setter Property="FontFamily" Value="Poppins"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    Padding="12">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3B82F6"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1E40AF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Separator -->
                    <Separator Margin="0,16" Background="#4B5563"/>

                    <!-- Sign Up Prompt -->
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Roboto"
                        FontSize="13"
                        Foreground="#D1D5DB">
                        Don’t have an account?
                        <Run
                            Text=" Sign Up"
                            Foreground="#60A5FA"
                            Cursor="Hand"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</mah:MetroWindow>